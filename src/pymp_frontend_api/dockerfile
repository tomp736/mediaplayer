FROM python:3.8-slim
RUN apt-get update \
    && apt-get install -y --no-install-recommends build-essential gcc ffmpeg \
    && rm -rf /var/lib/apt/lists/*

COPY ./src/pymp_common/ ./pymp_common
COPY ./src/pymp_frontend_api/ ./pymp_frontend_api

RUN pip3 install ./pymp_common
RUN pip3 install ./pymp_frontend_api

CMD ["python", "-u", "-m" , "pymp_frontend_api"]